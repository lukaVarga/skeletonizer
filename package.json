{
  "name": "skeletonizer",
  "version": "0.0.0",
  "description": "The way to skeletonize your components",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci --hoist",
    "clean": "npm run clean:artifacts && npm run clean:packages && npm run clean:root",
    "clean:artifacts": "lerna run clean --parallel",
    "clean:packages": "lerna clean --yes",
    "clean:root": "rimraf node_modules",
    "lint": "lerna run --parallel lint",
    "lintfix": "lerna run --parallel lintfix",
    "postinstall": "npm run bootstrap",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "style-lint": "lerna run --parallel style-lint",
    "style-lintfix": "lerna run --parallel style-lintfix",
    "test": "lerna run test"
  },
  "engines": {
    "node": ">=18.12.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukaVarga/skeletonizer.git"
  },
  "keywords": [
    "skeleton",
    "skeletonizer",
    "ui",
    "loading"
  ],
  "author": "Luka Varga",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lukaVarga/skeletonizer/issues"
  },
  "homepage": "https://github.com/lukaVarga/skeletonizer#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "codecov": "^3.8.3",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.31.0",
    "husky": "^8.0.3",
    "lerna": "^6.3.0",
    "lint-staged": "^13.1.0",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.5",
    "stylelint": "^14.16.1",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-declaration-strict-value": "^1.9.1",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "analyzeCommits": "@semantic-release/commit-analyzer",
    "generateNotes": "@semantic-release/release-notes-generator",
    "prepare": "@semantic-release/npm",
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
